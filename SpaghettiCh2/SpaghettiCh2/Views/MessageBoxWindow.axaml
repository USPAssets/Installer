<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:USPInstaller.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="USPInstaller.Views.MessageBoxWindow"
        Title="{Binding Title}"
        MinWidth="300" MinHeight="150"
		x:DataType="vm:MessageBoxViewModel"
        WindowStartupLocation="CenterOwner"
		SizeToContent="WidthAndHeight"
        CanResize="False">
	<Design.DataContext>
		<vm:MessageBoxViewModel/>
	</Design.DataContext>
	
	<DockPanel Margin="20">
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" DockPanel.Dock="Top"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Spacing="10">
            <Button Content="No" Command="{Binding NoCommand}" IsVisible="{Binding ShowNoButton}"/>
            <Button Content="SÃ¬" Command="{Binding YesCommand}" IsVisible="{Binding ShowYesButton}"/>
			<Button Content="{Binding LinkTitle}" Command="{Binding OpenLinkCommand}" IsVisible="{Binding ShowLinkButton}"/>
			<Button Content="OK" Command="{Binding OkCommand}" IsVisible="{Binding ShowOkButton}"/>
		</StackPanel>
	</DockPanel>
</Window>