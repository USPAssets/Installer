<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:USPInstaller.ViewModels"
             xmlns:assets="clr-namespace:USPInstaller.Assets"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="USPInstaller.Views.StartPageView"
             x:DataType="vm:StartPageViewModel">
	<Design.DataContext>
		<vm:StartPageViewModel />
	</Design.DataContext>

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.55" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Stretch" Spacing="10">
			<Image Source="/Assets/USP_Logo_Compact.png" MaxWidth="200" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" />
			<TextBlock Margin="0,0,0,20" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource DeterminationFont}" Text="Installer"/>

			<TextBlock
					   FontSize="14"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Margin="0,0,0,20">
				Benvenut”ô nell'installer di Undertale Spaghetti Project!
				<LineBreak />
				Scegli il gioco per cui installare la nostra traduzione:
			</TextBlock>
			<Button HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding OnUndertaleClick}">
				<Image Source="/Assets/Undertale-Logo.png" Height="50" MaxWidth="200"/>
			</Button>
			<Button HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding OnDeltaruneClick}">
				<Image Source="/Assets/Deltarune-Logo.png" Height="50" MaxWidth="200"/>
			</Button>
		</StackPanel>
		<Panel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
			<Grid ColumnDefinitions="1*, 1*, 1*" RowDefinitions="1*">
				<Button Grid.Row="0" Grid.Column="0" ToolTip.Tip="Unisciti alla nostra community su Discord!" RenderOptions.BitmapInterpolationMode="HighQuality">
					<Image Source="/Assets/discord_white.png" Height="30" Width="30"/>
				</Button>
				<Button Grid.Row="0" Grid.Column="1" ToolTip.Tip="Visitaci su BlueSky!">
					<Image Source="/Assets/bluesky_white.png" Height="30" Width="30" RenderOptions.BitmapInterpolationMode="HighQuality"/>
				</Button>
				<Button Grid.Row="0" Grid.Column="2" ToolTip.Tip="Visita il nostro sito!">
					<Image Source="/Assets/globe_white.png" Height="30" Width="30" RenderOptions.BitmapInterpolationMode="HighQuality"/>
				</Button>
			</Grid>
		</Panel>
	</Panel>
</UserControl>